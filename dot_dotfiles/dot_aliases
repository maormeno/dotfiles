# Core shell aliases with mostly visual/readability improvements.

# Safer defaults for destructive file commands.
alias rm='rm -i'
alias cp='cp -iv'
alias mv='mv -iv'

# Fast navigation helpers.
alias ..='cd ../'
alias ...='cd ../../'

# Readability-focused command replacements.
alias cat='bat --paging=never'      # Syntax-highlighted file output.
alias ls='eza --color=always --no-quotes'  # Cleaner file listing.

# Convenience shortcuts.
alias c='clear'
alias zshedit='$EDITOR ~/.zshrc'
alias f='open -a Finder ./'
alias cursorcfg='open "$HOME/Library/Application Support/Cursor/User"' # Open Cursor User config directory.
alias cursor-settings='$EDITOR "$HOME/Library/Application Support/Cursor/User/settings.json"' # Edit Cursor settings file.
alias cursor-keys='$EDITOR "$HOME/Library/Application Support/Cursor/User/keybindings.json"' # Edit Cursor keybindings file.
