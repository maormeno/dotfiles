#!/usr/bin/env bash

# Installs Squirrelsong theme for Bear
#
# Author: Artem Sapegin, sapegin.me
# License: MIT
# https://github.com/sapegin/dotfiles

sudo -v

sudo command rm "/Applications/Bear.app/Contents/Frameworks/BearCore.framework/Resources/Ayu.theme"
sudo command cp "squirrelsong-master/light/Bear/Squirrelsong Light.theme" "/Applications/Bear.app/Contents/Frameworks/BearCore.framework/Resources/Ayu.theme"

echo "ðŸ¦œ Now choose Ayu theme in Bear settings"
