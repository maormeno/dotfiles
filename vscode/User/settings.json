{
  "workbench.colorCustomizations": {
    // Dark theme: https://sapegin.me/squirrelsong/
    "terminal.background": "#352a21",
    "terminal.foreground": "#9e8a74",
    "terminalCursor.background": "#352a21",
    "terminalCursor.foreground": "#9e8a74",
    "terminal.ansiBlack": "#352a21",
    "terminal.ansiBlue": "#5d99cb",
    "terminal.ansiBrightBlack": "#6b503c",
    "terminal.ansiBrightBlue": "#64a1d3",
    "terminal.ansiBrightCyan": "#adccc5",
    "terminal.ansiBrightGreen": "#73a15c",
    "terminal.ansiBrightMagenta": "#a08ac2",
    "terminal.ansiBrightRed": "#db7666",
    "terminal.ansiBrightWhite": "#dcd5c0",
    "terminal.ansiBrightYellow": "#e2c54c",
    "terminal.ansiCyan": "#4f9593",
    "terminal.ansiGreen": "#558240",
    "terminal.ansiMagenta": "#7f61b3",
    "terminal.ansiRed": "#bc5248",
    "terminal.ansiWhite": "#c4a389",
    "terminal.ansiYellow": "#e2c54c",
    "terminal.border": "#574131",
    "terminal.selectionBackground": "#41352a",
    "terminal.inactiveSelectionBackground": "#41352a",
    "terminal.findMatchBackground": "#ca5a8366",
    "terminal.findMatchBorder": "#ca5a83",
    "terminal.findMatchHighlightBackground": "#ca5a8366",
    "terminal.findMatchHighlightBorder": "#ca5a83",
    "terminal.hoverHighlightBackground": "#ff0",
    "terminalCommandDecoration.defaultBackground": "#896b56",
    "terminalCommandDecoration.successBackground": "#445536",
    "terminalCommandDecoration.errorBackground": "#6c3b2f",
    "terminalOverviewRuler.cursorForeground": "#f00",
    "terminalOverviewRuler.findMatchForeground": "#0f0",
    "terminalStickyScroll.background": "#00f",
    "terminalStickyScrollHover.background": "#0ff"
    // GitLens
    "gitlens.gutterUncommittedForegroundColor": "#e87da4",
    "gitlens.gutterForegroundColor": "#78737d",
    "gitlens.gutterBackgroundColor": "#ffffff00"
  },

  // Internal
  "breadcrumbs.filePath": "off",
  "diffEditor.experimental.showMoves": true,
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.accessibilitySupport": "off",
  "editor.autoClosingBrackets": "never",
  "editor.autoClosingQuotes": "never",
  "editor.autoIndent": "advanced",
  "editor.autoSurround": "never",
  "editor.bracketPairColorization.enabled": false,
  "editor.cursorBlinking": "solid",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.foldingImportsByDefault": true,
  "editor.fontFamily": "MonoLisa, \"Symbols Nerd Font Mono\"",
  "editor.fontLigatures": "'calt' on, 'liga' off",
  "editor.fontSize": 16,
  "editor.lineHeight": 1.5,
  "editor.formatOnSave": true,
  "editor.gotoLocation.multipleReferences": "goto",
  "editor.gotoLocation.multipleDefinitions": "goto",
  "editor.gotoLocation.multipleDeclarations": "goto",
  "editor.gotoLocation.multipleImplementations": "goto",
  "editor.gotoLocation.multipleTypeDefinitions": "goto",
  "editor.guides.indentation": true,
  "editor.inlineSuggest.suppressSuggestions": true,
  "editor.lineNumbers": "off",
  "editor.linkedEditing": true,
  "editor.minimap.enabled": false,
  "editor.renderWhitespace": "selection",
  "editor.roundedSelection": false,
  "editor.rulers": [80],
  "editor.semanticHighlighting.enabled": true,
  "editor.snippetSuggestions": "bottom",
  "editor.suggestSelection": "first",
  "editor.wordWrap": "on",
  "editor.codeActionsOnSave": {
    "source.organizeImports": "never",
    "source.fixAll.eslint": "explicit"
  },
  "git.closeDiffOnOperation": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "outline.problems.badges": false,
  "problems.autoReveal": false,
  "search.decorations.badges": false,
  "search.seedOnFocus": true,
  "search.useParentIgnoreFiles": true,
  "scm.diffDecorationsGutterPattern": {
    "modified": false
  },
  "scm.diffDecorationsIgnoreTrimWhitespace": "true",
  "scm.inputFontFamily": "editor",
  "scm.inputFontSize": 16,
  "scm.inputMaxLineCount": 20,
  "scm.inputMinLineCount": 4,
  "security.promptForLocalFileProtocolHandling": false,
  "telemetry.telemetryLevel": "off",
  "terminal.integrated.commandsToSkipShell": ["workbench.action.closePanel"],
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorStyleInactive": "line",
  "terminal.integrated.cursorWidth": 2,
  "terminal.integrated.drawBoldTextInBrightColors": false,
  "terminal.integrated.enablePersistentSessions": false,
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.hideOnStartup": "always",
  "terminal.integrated.minimumContrastRatio": 1,
  "terminal.integrated.shellIntegration.decorationsEnabled": "never",
  "terminal.integrated.tabs.enableAnimation": false,
  "terminal.integrated.tabStopWidth": 2,
  "workbench.activityBar.location": "hidden",
  "workbench.colorTheme": "Squirrelsong Light",
  "workbench.commandPalette.preserveInput": false,
  "workbench.editor.customLabels.enabled": true,
  "workbench.editor.customLabels.patterns": {
    "**/index.*": "${dirname}/${filename}.${extname}"
  },
  "workbench.editor.editorActionsLocation": "hidden",
  "workbench.editor.empty.hint": "hidden",
  "workbench.editor.showTabs": "none",
  "workbench.enableExperiments": false,
  "workbench.fontAliasing": "auto",
  "workbench.iconTheme": "catppuccin-latte",
  "workbench.layoutControl.enabled": false,
  "workbench.reduceMotion": "on",
  "workbench.settings.enableNaturalLanguageSearch": false,
  "workbench.sideBar.location": "right",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.statusBar.visible": false,
  "workbench.tips.enabled": false,
  "window.commandCenter": true,
  "window.customTitleBarVisibility": "never",
  "window.openFilesInNewWindow": "off",
  "window.openFoldersInNewWindow": "off",
  "window.restoreWindows": "all",
  "window.titleBarStyle": "native",
  "window.title": "${activeEditorShort}",
  "zenMode.centerLayout": false,
  "zenMode.hideLineNumbers": true,
  "screencastMode.onlyKeyboardShortcuts": true,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "explorer.openEditors.visible": 0,
  "breadcrumbs.enabled": false,
  "extensions.autoUpdate": "onlyEnabledExtensions",
  "extensions.ignoreRecommendations": true,
  "files.autoSave": "onWindowChange",
  "files.hotExit": "onExitAndWindowClose",
  "files.defaultLanguage": "markdown",
  "files.associations": {
    "*.js.snap": "javascript",
    ".prettierrc": "json"
  },
  "files.exclude": {
    "**/package-lock.json": true,
    "**/pnpm-lock.yaml": true,
    "**/yarn.lock": true
  },
  "task.problemMatchers.neverPrompt": {
    "npm": true
  },

  // Plugins
  "git.openRepositoryInParentFolders": "always",
  "color-highlight.matchWords": false,
  "color-highlight.sass.includePaths": [],
  "prettier.requireConfig": true,
  "eslint.rules.customizations": [
    { "rule": "*", "fixable": true, "severity": "info" }
  ],
  "eslint.run": "onSave",
  "eslint.useESLintClass": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "html",
    "astro"
  ],
  "emmet.excludeLanguages": [
    "markdown",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "cSpell.spellCheckDelayMs": 500,
  "cSpell.enableFiletypes": ["shellscript"],
  "cSpell.userWords": [
    "antipattern",
    "antipatterns",
    "Artem",
    "autofix",
    "autofixable",
    "autofixed",
    "autofixing",
    "customizability",
    "cyclomatic",
    "discoverability",
    "Formik",
    "greppable",
    "Hygraph",
    "okayish",
    "overpolice",
    "refactorings",
    "Sapegin",
    "Signup",
    "Squirrelsong",
    "Tamia",
    "trackpad"
  ],
  "donations.disablePrompt": true,
  "highlight.regexes": {
    "((?:<!-- *)?(?:#|// @|//|./\\*+|<!--|--|\\* @|{!|{{!--|{{!) *(?:TODO|FIXME|FIX|BUG|UGLY|DEBUG|HACK|XXX)(?:\\s*\\([^)]+\\))?:?)((?!\\w)(?: *-->| *\\*/| *!}| *--}}| *}}|(?= *(?:[^:]//|/\\*+|<!--|@|--|{!|{{!--|{{!))|(?: +[^\\n@]*?)(?= *(?:[^:]//|/\\*+|<!--|@|--(?!>)|{!|{{!--|{{!))|(?: +[^@\\n]+)?))": {
      "filterFileRegex": ".*(?<!CHANGELOG.md)$",
      "decorations": [
        {
          "overviewRulerColor": "#78737d",
          "color": "#78737d",
          "fontWeight": "bold"
        },
        {
          "color": "#78737d"
        }
      ]
    }
  },
  "sonarlint.disableTelemetry": true,
  "sonarlint.rules": {
    "typescript:S6544": {
      "level": "off"
    },
    "typescript:S4123": {
      "level": "off"
    },
    "javascript:S4138": {
      "level": "off"
    },
    "typescript:S6759": {
      "level": "off"
    },
    "typescript:S6582": {
      "level": "off"
    },
    "typescript:S3776": {
      "level": "off"
    },
    "typescript:S3735": {
      "level": "off"
    },
    "typescript:S1135": {
      "level": "off"
    },
    "typescript:S6598": {
      "level": "off"
    },
    "typescript:S6564": {
      "level": "off"
    },
    "typescript:S6509": {
      "level": "off"
    }
  },
  "github.copilot.editor.enableAutoCompletions": false,
  "gitlens.blame.avatars": false,
  "gitlens.blame.dateFormat": "YYYY-MM-DD",
  "gitlens.blame.fontSize": 13,
  "gitlens.blame.fontWeight": "bold",
  "gitlens.blame.format": "${agoOrDateShort|4?} ${authorNotYou|14-}",
  "gitlens.blame.highlight.enabled": false,
  "gitlens.blame.highlight.locations": ["gutter"],
  "gitlens.blame.ignoreWhitespace": true,
  "gitlens.blame.compact": true,
  "gitlens.codeLens.enabled": false,
  "gitlens.currentLine.enabled": false,
  "gitlens.heatmap.ageThreshold": 90,
  "gitlens.heatmap.coldColor": "#f7f6f9",
  "gitlens.heatmap.fadeLines": true,
  "gitlens.heatmap.hotColor": "#e87da4",
  "gitlens.hovers.annotations.over": "annotation",
  "gitlens.hovers.currentLine.enabled": false,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.keymap": "none",
  "gitlens.statusBar.enabled": false,

  // File types
  "javascript.autoClosingTags": false,
  "javascript.format.enable": false,
  "javascript.preferences.importModuleSpecifier": "relative",
  "javascript.preferences.jsxAttributeCompletionStyle": "none",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.validate.enable": false,
  "typescript.autoClosingTags": false,
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "typescript.format.enable": false,
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.preferences.jsxAttributeCompletionStyle": "none",
  "typescript.preferences.preferTypeOnlyAutoImports": true,
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "html.format.wrapLineLength": 0,
  "html.format.enable": false,
  "html.autoClosingTags": false,
  "html.autoCreateQuotes": false,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": false
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[astro]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[scminput]": {
    "editor.rulers": [72],
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 72
  }
}
