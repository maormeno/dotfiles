{
	// Internal
	"editor.acceptSuggestionOnCommitCharacter": false,
	"editor.accessibilitySupport": "off",
	"editor.autoClosingBrackets": "never",
	"editor.autoClosingQuotes": "never",
	"editor.autoIndent": "advanced",
	"editor.autoSurround": "never",
	"editor.bracketPairColorization.enabled": false,
	"editor.cursorBlinking": "solid",
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.fontFamily": "MonoLisa",
	"editor.fontLigatures": "'calt' on, 'liga' off",
	"editor.fontSize": 16,
	"editor.formatOnPaste": true,
	"editor.formatOnSave": true,
	"editor.guides.indentation": true,
	"editor.lineNumbers": "off",
	"editor.linkedEditing": true,
	"editor.minimap.enabled": false,
	"editor.renderWhitespace": "selection",
	"editor.roundedSelection": false,
	"editor.rulers": [80],
	"editor.semanticHighlighting.enabled": true,
	"editor.snippetSuggestions": "inline",
	"editor.suggestSelection": "first",
	"editor.wordWrap": "on",
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": "explicit"
	},
	"telemetry.telemetryLevel": "off",
	"workbench.activityBar.location": "hidden",
	"workbench.colorTheme": "Squirrelsong Light",
	"workbench.commandPalette.preserveInput": false,
	"workbench.editor.showTabs": "none",
	"workbench.fontAliasing": "auto",
	"workbench.iconTheme": "catppuccin-latte",
	"workbench.sideBar.location": "right",
	"workbench.statusBar.visible": false,
	"workbench.startupEditor": "newUntitledFile",
	"window.commandCenter": true,
	"window.customTitleBarVisibility": "never",
	"window.openFilesInNewWindow": "off",
	"window.openFoldersInNewWindow": "off",
	"window.restoreWindows": "all",
	"window.titleBarStyle": "native",
	"window.title": "${activeEditorShort}",
	"zenMode.centerLayout": false,
	"zenMode.hideLineNumbers": true,
	"screencastMode.onlyKeyboardShortcuts": true,
	"explorer.confirmDragAndDrop": false,
	"explorer.confirmDelete": false,
	"explorer.openEditors.visible": 0,
	"breadcrumbs.enabled": false,
	"extensions.autoUpdate": true,
	"extensions.ignoreRecommendations": true,
	"files.autoSave": "onWindowChange",
	"files.hotExit": "onExitAndWindowClose",
	"files.defaultLanguage": "markdown",
	"files.associations": {
		"*.js.snap": "javascript",
		".prettierrc": "json"
	},

	// Plugins
	"git.openRepositoryInParentFolders": "always",
	"color-highlight.matchWords": false,
	"color-highlight.sass.includePaths": [],
	"prettier.requireConfig": true,
	"eslint.run": "onSave",
	"eslint.validate": [
		"javascript",
		"javascriptreact",
		"typescript",
		"typescriptreact",
		"html",
		"astro"
	],
	"emmet.excludeLanguages": [
		"markdown",
		"javascript",
		"javascriptreact",
		"typescript",
		"typescriptreact"
	],
	"spellright.notificationClass": "information",
	"spellright.groupDictionaries": false,
	"spellright.configurationScope": "user",
	"spellright.language": [],
	"spellright.documentTypes": ["latex", "plaintext"],
	"donations.disablePrompt": true,
	"highlight.regexes": {
		"((?:<!-- *)?(?:#|// @|//|./\\*+|<!--|--|\\* @|{!|{{!--|{{!) *(?:TODO|FIXME|FIX|BUG|UGLY|DEBUG|HACK|XXX)(?:\\s*\\([^)]+\\))?:?)((?!\\w)(?: *-->| *\\*/| *!}| *--}}| *}}|(?= *(?:[^:]//|/\\*+|<!--|@|--|{!|{{!--|{{!))|(?: +[^\\n@]*?)(?= *(?:[^:]//|/\\*+|<!--|@|--(?!>)|{!|{{!--|{{!))|(?: +[^@\\n]+)?))": {
			"filterFileRegex": ".*(?<!CHANGELOG.md)$",
			"decorations": [
				{
					"overviewRulerColor": "#727075",
					"color": "#727075",
					"fontWeight": "bold"
				},
				{
					"color": "#727075"
				}
			]
		}
	},
	"sonarlint.disableTelemetry": true,
	"sonarlint.rules": {
		"typescript:S6544": {
			"level": "off"
		},
		"typescript:S4123": {
			"level": "off"
		},
		"javascript:S4138": {
			"level": "off"
		}
	},

	// File types
	"javascript.validate.enable": false,
	"javascript.autoClosingTags": false,
	"javascript.format.enable": false,
	"javascript.updateImportsOnFileMove.enabled": "always",
	"javascript.preferences.importModuleSpecifier": "relative",
	"javascript.preferences.jsxAttributeCompletionStyle": "none",
	"typescript.preferences.jsxAttributeCompletionStyle": "none",
	"typescript.autoClosingTags": false,
	"typescript.format.enable": false,
	"typescript.updateImportsOnFileMove.enabled": "always",
	"typescript.preferences.importModuleSpecifier": "relative",
	"html.format.wrapLineLength": 0,
	"html.format.enable": false,
	"html.autoClosingTags": false,
	"html.autoCreateQuotes": false,
	"[javascript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.formatOnSave": true
	},
	"[javascriptreact]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.formatOnSave": true
	},
	"[typescript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.formatOnSave": true
	},
	"[typescriptreact]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.formatOnSave": true
	},
	"[markdown]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.formatOnSave": false
	},
	"[html]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.formatOnSave": true
	},
	"[json]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.formatOnSave": true
	},
	"[astro]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.formatOnSave": true
	}
}
