{
  // Keep startup uncluttered.
  "workbench.startupEditor": "none",

  // Avoid replacing existing tabs with preview tabs.
  "workbench.editor.enablePreview": false,

  // Editor readability defaults.
  "editor.fontSize": 14,
  "editor.lineHeight": 1.45,
  "editor.fontLigatures": true,
  "editor.minimap.enabled": false,

  // Save/format hygiene defaults.
  "editor.formatOnSave": true,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,

  // Terminal readability defaults.
  "terminal.integrated.fontSize": 13,

  // Enable smooth access to settings sync from day one.
  "settingsSync.ignoredExtensions": []
}
