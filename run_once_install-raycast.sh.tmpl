#!/bin/bash
# Install Raycast - runs once on setup

set -e

echo "Installing Raycast..."

# Check OS type
if [[ "$OSTYPE" == "darwin"* ]]; then
    # macOS installation
    if command -v brew &> /dev/null; then
        if [[ ! -d "/Applications/Raycast.app" ]]; then
            echo "Installing Raycast via Homebrew..."
            brew install --cask raycast
        else
            echo "Raycast already installed"
        fi
    else
        echo "Homebrew not found. Please install Homebrew first: https://brew.sh"
        exit 1
    fi
elif [[ "$OSTYPE" == "linux-gnu"* ]]; then
    # Linux - Raycast is macOS-only
    echo "Raycast is currently only available for macOS."
    echo "Please visit https://raycast.com for more information"
else
    echo "Unsupported OS: $OSTYPE"
    exit 1
fi

echo "Raycast installation complete"
